{
    "compilerOptions": {
        "module": "ES2022",
        "moduleResolution": "node",
        "target": "ES2018",
        "lib": ["ES2021", "DOM"],
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "preserveConstEnums": true,
        "sourceMap": false,
        "outDir": "scripts",
        "experimentalDecorators": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "scripts"
    ]
}